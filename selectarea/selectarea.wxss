.shade {
  background-color: #000;
  opacity: .7;
  position: absolute;
  display: none;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 5;
}
.show {
  display: block !important;
}
.handle-bar {
  padding: 0 15px;
  height: 80rpx;
  background-color: #eee;
}
.confirm {
  text-align: right
}
.selector-area {
  height: 600rpx;
  width: 100%;
  background-color: #fff;
  position: absolute;
  display: none;
  bottom: 0;
  z-index: 66;
}
.selector {
  text-align: center
}
.picker {
  font-size: 32rpx;
  height: 88rpx;
  line-height: 88rpx;
}
.actived {
  color: #f0189d;
}
.area-selector {
  height: 520rpx;
}