@import "/pages/common/lib/weui.wxss";

.navigator-arrow {
  padding-right: 26rpx;
  position: relative;
}

.navigator-arrow:after {
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #888;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 20rpx;
}

.bgimg {
  text-align: center;
  width: 100%;
  height: 384rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.bgimg image.bg {
  width: 100%;
  height: 384rpx;
  position: absolute;
  top: 0px;
  left: 0px;
}

.userinfo {
  position: relative;
  margin-top: 80rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  display: block;
}

.userinfo-nickname {
  color: #fff;
}

.mt0 {
  margin-top: 0rpx;
}

.orders-box {
  /*margin-bottom: 90rpx;*/
}

.orders-box .orders-list {
  position: relative;
  padding: 20rpx 20rpx 20rpx 180rpx;
  border-bottom: 1rpx solid #ededed;
  min-height: 150rpx;
}

.orders-box .orders-list:last-child {
  border-bottom: none;
}

.orders-thumb {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  width: 150rpx;
  height: 150rpx;
}

.orders-pro-name {
  max-height: 88rpx;
  overflow: hidden;
}

.orders-pro-price {
  line-height: 40rpx;
  color: #888;
  width: 450rpx;
}

.orders-count-num {
  line-height: 40rpx;
  color: #888;
  position: absolute;
  right: 20rpx;
  top: 72rpx;
}

.bordernone {
  border: none;
}

.bordernone::before {
  border: none;
}

.bordernone::after {
  border: none;
}

.car_list .bottom {
  position: fixed;
  bottom: -1rpx;
  line-height: 80rpx;
  background-color: #fff;
  width: 100%;
  display: block;
  padding-left: 15rpx;
  border-top: 1rpx solid #eee;
}

.car_list .bottom .bt {
  background-color: #f0189d;
  color: #fff;
  width: 180rpx;
  float: right;
  text-align: center;
}

.car_list .bottom .check {
  display: inline-block;
}

.car_list .bottom .info {
  display: inline-block;
  padding-right: 10rpx;
}

.car_list .bottom .info view {
  display: inline-block;
}

.car_list .bottom .ttnum, .car_list .bottom .ttprice {
  color: #f0189d;
}

checkbox {
  border: none;
  border-radius: 50%;
}

.total-select {
  position: absolute;
  left: 20rpx;
  top: 16rpx;
  width: 45rpx;
  height: 45rpx;
}

.bottom .seltxt {
  margin-left: 55rpx;
}

.cart-del {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 44rpx;
}

.frlink {
  display: inline-block;
  float: right;
  color: #586c94;
}

.weui-cells {
  padding-top: 10rpx;
}

.weui-cells:first-child {
  margin-top: 0rpx;
}

.weui-cell:before {
  content: " ";
  position: absolute;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1rpx solid #eee;
  color: #d9d9d9;
  left: 15px;
}

.weui-cell {
  display: block;
}

.weui-cell .name {
  display: inline-block;
}

.weui-cell .tel {
  float: right;
  display: inline-block;
}

.weui-cell .address {
  display: block;
  margin-top: 20rpx;
  color: #888;
  font-size: 24rpx;
}

.botop {
  font-size: 28rpx;
  line-height: 50rpx;
  position: relative;
}

.watermark {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 240rpx;
  height: 200rpx;
}

.watermark image {
  width: 240rpx;
  height: 200rpx;
}

.watermark .txt {
  margin-top: 78rpx;
  text-align: center;
  width: 245rpx;
  transform: rotate(342deg);
  font-size: 36rpx;
  position: absolute;
  top: 0rpx;
  right: 0rpx;
  color: #888;
}

.topay {
  color: #fff;
  background-color: #f0189d;
  position: relative;
  display: block;
  margin-left: auto;
  margin-right: auto;
  padding-left: 14px;
  padding-right: 14px;
  box-sizing: border-box;
  font-size: 32rpx;
  text-align: center;
  text-decoration: none;
  line-height: 80rpx;
  border-radius: 10rpx;
  -webkit-tap-highlight-color: transparent;
  overflow: hidden;
}

.wlinfo {
  padding-bottom: 10rpx;
}

.wlitem {
  padding: 4rpx 15px;
  font-size: 24rpx;
  line-height: 40rpx;
  word-break: break-all;
}

.wlitem.on {
  font-weight: bold;
}

.wlitem .time {
  float: left;
}

.wlitem .txt {
  padding-left: 170rpx;
}

.op_bt {
  padding: 0rpx 15px;
}

.gotoComment {
  position: absolute;
  right: 20rpx;
  bottom: 0rpx;
  color: #f0189d;
  font-size: 24rpx;
  padding: 20rpx 0rpx;
}

.pcolor {
  font-size: 24rpx;
  color: #999;
  line-height: 40rpx;
  max-height: 40rpx;
  overflow: hidden;
}
