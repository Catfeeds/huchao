/*导航*/

.navbar {
  flex: none;
  display: flex;
  background: #f5f5f5;
  z-index: 5;
  height: 80rpx;
}

.navbar .item {
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
}

.navbar .item.active {
  color: #f0189d;
  background-color: #fff;
}

.navbar .item.active:after {
  content: "";
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 5rpx;
  background: #f0189d;
}

.title {
  height: 80rpx;
  line-height: 80rpx;
