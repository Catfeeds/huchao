  margin-top: -1rpx;
}

.floor .title {
  text-align: center;
  line-height: 60rpx;
  margin: 20rpx;
}

.floor .name {
  display: inline-block;
  color: #000;
  font-weight: 700;
  font-size: 40rpx;
}

.floor .line {
  display: inline-block;
  width: 120rpx;
  height: 1rpx;
  border-top: 1rpx solid #bebebe;
  margin: 10rpx;
}

.floor .mini {
  line-height: 30rpx;
  font-size: 24rpx;
