@import "/pages/common/lib/weui.wxss";

.navigator-arrow {
  padding-right: 26rpx;
  position: relative;
}

.navigator-arrow:after {
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #888;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 20rpx;
}

.bgimg {
  text-align: center;
  height: 200rpx;
  position: relative;
  padding: 60rpx 20rpx 20rpx;
}

.userinfo {
  position: relative;
  text-align: left;
  width: 100%;
  display: flex;
  display: -webkit-flex;
  flex-flow: row nowrap;
  align-items: center;
  background: #fff;
  box-shadow: 0 15rpx 32rpx #f2f2f2;
}

.userinfo-avatar {
  width: 190rpx;
  height: 190rpx;
  display: block;
  background-color: #eee;
}

.userinfo-nickname {
  margin-left: 20rpx;
  max-width: 440rpx;
}

.userinfo-nickname .name {
  color: #333;
  font-size: 32rpx;
}

.userinfo-nickname .label {
  font-size: 24rpx;
  line-height: 36rpx;
  color: #808080;
  margin-top: 20rpx;
}

