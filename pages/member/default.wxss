.navs {
  display: flex;
  display: -webkit-flex;
  flex-flow: row nowrap;
}

.navs .nav-item {
  width: 33.3%;
  display: flex;
  align-items: center;
  flex-direction: column;
  padding: 20rpx 0rpx;
  position: relative;
}

.navs .nav-item .img_nav {
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
}

.navs .nav-item .nav-image {
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
}

.navs .nav-item:nth-child(1) image {
  width: 50rpx;
  height: 50rpx;
}

.navs .nav-item:nth-child(2) image {
