/*触控点样式*/
.pointingStick_box{
    background: #fff;
    width: 100%;
    padding: 20rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.pointingStick_box .contentButtonBox{
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
}
.pointingStick_box .contentButtonBox .contentButtonBox_in_box{
    width: 20rpx;
    height: 20rpx;
    border-radius: 50%;
    border: 2rpx #666 solid;
    margin-right: 8rpx;
    background: #fff;
}
.pointingStick_box .contentButtonBox .contentButtonBox_in_box_hover{
    background: #f8b23a;
}
