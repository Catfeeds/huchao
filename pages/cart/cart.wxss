.cart {
  height: auto;
  overflow: hidden;
}

.cart_em {
  display: flex;
  flex-direction: column;
  min-height: 100%;
  flex-grow: 1;
}

.cart .em {
  text-align: center;
}

.cart .em image {
  width: 255rpx;
  height: 230rpx;
  padding: 120rpx 20rpx 30rpx 0;
}

.cart .em .txt {
  color: #999;
}

.cart .em .gobuy {
  margin-top: 50rpx;
  color: #f0189d;
  border: 1rpx solid #f0189d;
  padding: 2rpx 24rpx 0;
  border-radius: 10rpx;
  display: inline-block;
  line-height: 60rpx;
}

.guess .title {
  text-align: center;
  line-height: 60rpx;
  margin: 10rpx 20rpx;
}

.guess .name {
  display: inline-block;
  color: #000;
  font-size: 28rpx;
}

.guess .line {
  display: inline-block;
  width: 120rpx;
  height: 1rpx;
  border-top: 1rpx solid #bebebe;
  margin: 10rpx;
}

.scroll-view_H {
  white-space: nowrap;
}

.scroll-view-item {
  height: 800rpx;
}

.scroll-view-item_H {
  display: inline-block;
  height: 400rpx;
  font-size: 32rpx;
  line-height: 80rpx;
  width: 210rpx;
}

.page-footer .classlist .item {
  padding: 0 20rpx;
}

.page-footer .classlist .item  .ptitle {
  line-height: 40rpx;
  height: 80rpx;
  overflow: hidden;
  font-size: 30rpx;
  white-space: normal;
}


.page-footer .classlist .item .price {
  font-size: 24rpx;
  color: #f0189d;
  padding-bottom: 20rpx;
  line-height: 60rpx;
}

.page-footer .classlist .item .img {
  padding: 10rpx;
}

.page-footer .classlist .item  image {
  width: 100%;
  height: 210rpx;
  display: block;
}

.car_list {
  display: flex;
  flex-direction: column;
  min-height: 100%;
  flex-grow: 1;
  margin-bottom: 96rpx;
}

.car_list .tishi {
  font-size: 24rpx;
  color: #f0189d;
  line-height: 30rpx;
  background-color: #fff;
  padding: 15rpx;
  margin-bottom: 16rpx;
}

.car_list .item {
  background-color: #fff;
  padding: 15rpx;
  border-bottom: 1rpx solid #eee;
  height: auto;
  overflow: hidden;
  position: relative;
}

.itemlist .item:last-child {
  border-bottom: none;
}

.car_list .item .check {
  float: left;
  width: 70rpx;
  vertical-align: middle;
  line-height: 200rpx;
}

.car_list .item .img {
  float: left;
  width: 240rpx;
  text-align: center;
}

.car_list .item .img image {
  width: 200rpx;
  height: 200rpx;
}

.car_list .item .right {
  float: right;
  width: 390rpx;
}
.car_list .item  .pcolor{
  font-size: 24rpx;
  color: #999;
  line-height: 60rpx;
  max-height: 60rpx;
  overflow: hidden;
}
.car_list .item  .ptitle {
  line-height: 40rpx;
  height: 80rpx;
  overflow: hidden;
  font-size: 30rpx;
  white-space: normal;
  margin-bottom: -2rpx;
}

.car_list .item .price {
  font-size: 32rpx;
  color: #f0189d;
  line-height: 60rpx;
  display: inline-block;
  position: absolute;
  bottom: 36rpx;
}

.car_list .item .op {
  display: flex;
  position: absolute;
  right: 120rpx;
  bottom: 36rpx;
}

.car_list .item .op .de, .car_list .item .op .num, .car_list .item .op .add {
  border: 1rpx solid #999;
  padding: 5rpx 20rpx;
}

.car_list .item .op .num {
  border-left: none;
  border-right: none;
}

.car_list .bottom {
  position: fixed;
  bottom: 96rpx;
  line-height: 80rpx;
  background-color: #fff;
  width: 100%;
  display: block;
  padding-left: 15rpx;
  border-top: 1rpx solid #eee;
}

.car_list .bottom .bt {
  background-color: #f0189d;
  color: #fff;
  width: 180rpx;
  float: right;
  text-align: center;
}

.car_list .bottom .check {
  display: inline-block;
}

.car_list .bottom .info {
  float: right;
  display: inline-block;
  padding-right: 10rpx;
}

.car_list .bottom .info view {
  display: inline-block;
}

.car_list .bottom .ttnum, .car_list .bottom .ttprice {
  color: #f0189d;
}

checkbox {
  border: none;
  border-radius: 50%;
}

.total-select {
  position: absolute;
  left: 20rpx;
  top: 16rpx;
  width: 45rpx;
  height: 45rpx;
}

.bottom .seltxt {
  margin-left: 55rpx;
}

.cart-del {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 44rpx;
}
