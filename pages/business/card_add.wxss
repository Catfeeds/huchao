/* pages/business/card_add.wxss */
@import "/pages/common/front.wxss";
@import "/pages/common/lib/weui.wxss";

.navigator-arrow {
  padding-right: 26rpx;
  position: relative;
}

.navigator-arrow:after {
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #888;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 5rpx;
}

.weui-cell__bd {
  font-size: 28rpx;
  color: #000;
}

.weui-cell__ft input {
  font-size: 28rpx;
}

.floor {
  padding: 0 20rpx;
  margin-top: 80rpx;
  margin-bottom: 30rpx;
}

.floor .btn1 {
  width: 100%;
  height: 80rpx;
  background: #00b00f;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  line-height: 80rpx;
  margin: 10rpx 0 0;
  border-radius: 10rpx;
  box-shadow: 0 0 30rpx #e6e6e6;
}

.floor .btn2 {
  width: 100%;
  height: 80rpx;
  background: rgba(0, 0, 0, 0);
  font-size: 30rpx;
  color: #b3b3b3;
  text-align: center;
  line-height: 80rpx;
  border-radius: 10rpx;
  margin: 10rpx 0;
}

.wxapp-modal {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0px;
  left: 0px;
  z-index: 999;
  display: none;
}
.wxapp-modal.on{
  display: block;
}
.wxapp-modal .content {
  width: 94%;
  height: 1000rpx;
  top: 50%;
  left:3%;
  margin-top: -500rpx;
  text-align: center;
  position: absolute;
  z-index: 9999;
}

.wxapp-modal .content .head {
  margin: 0 auto;
  height: 100rpx;
  text-align: center;
  background-color: #fff;
  position: relative;
  border-top-left-radius: 8rpx;
  border-top-right-radius: 8rpx;
  border-bottom: 1rpx #eee solid;
}
.wxapp-modal .content .head .txt{
  color:#323232;
  font-size: 32rpx;
  line-height: 100rpx;
}
.wxapp-modal .content .head .close{
  position: absolute;
  top:35rpx;
  right:30rpx;
  line-height: 28rpx;
  font-size: 28rpx;
  color:#323232;
}
.wrap_con {
  display: flex;
  display: -webkit-flex;
  flex-flow: row nowrap;
}
.wrap_con .wrap_left{
  width:290rpx;
  background: #f5f5f5;
}
.wrap_con .wrap_left .item{
  font-size: 26rpx;
  color:#333333;
  text-align: center;
  border-bottom: 2rpx solid #CFCFCF;
  padding:25rpx 15rpx;
  line-height: 28rpx;
}
.wrap_con .wrap_left .item.active{
  background: #fff;
  border-right: 2rpx solid #f2f2f2;
}
.wrap_con .wrap_right{
  flex:1;
  background: #fff;
}
.wrap_con .wrap_right .item{
  font-size: 26rpx;
  color:#333333;
  text-align: center;
  border-bottom: 2rpx solid #CFCFCF;
  padding:25rpx 15rpx;
  line-height: 28rpx;
}
.wxapp-modal .mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0px;
  background-color: rgba(0, 0, 0, 0.5);
}
