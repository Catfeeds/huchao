.maxletter {
  position: fixed;
  width: 100rpx;
  height: 100rpx;
  background: #333;
  top: 50%;
  left: 50%;
  margin-top: -50rpx;
  margin-left: -50rpx;
  border-radius: 20rpx;
  color: #fff;
  text-align: center;
  line-height: 100rpx;
  font-size: 70rpx;
  transition: 0.55s all;
  opacity: 0;
}

.maxletter image {
  width: 64rpx;
  height: 70rpx;
  vertical-align: middle;
}

.maxletter.on {
  opacity: 0.8;
}

