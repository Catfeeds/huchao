  height: 60rpx;
  display: flex;
  border-radius: 60rpx;
  border: 1rpx solid #ccc;
}

.head .search icon {
  width: 28rpx;
  height: 26rpx;
  margin: 12rpx 20rpx 12rpx 40rpx;
}

.head .search input {
  float: left;
  width: 530rpx;
  height: 60rpx;
  font-size: 28rpx;
  color: #808080;
}

.content {
  background: #eee;
  margin-top: 90rpx;
