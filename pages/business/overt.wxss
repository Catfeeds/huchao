/* pages/business/overt.wxss */

.header {
  width: 100%;
  height: 80rpx;
  background: #f2f2f2;
  position: fixed;
}

.header .search {
  padding: 10rpx 38rpx;
}

.header .search .content {
  width: 100%;
  height: 60rpx;
  border-radius: 30rpx;
  background: #fff;
  display: flex;
  flex-flow: row nowrap;
}

.header .search .pike {
  display: flex;
  flex-flow: row nowrap;
  height: 60rpx;
  align-items: center;
  position: relative;
  padding: 0 20rpx;
  width: 130rpx;
}

.header .search .pike .txt {
  padding-right: 10rpx;
  font-size: 26rpx;
  color: #999;
  line-height: 40rpx;
  width: 100rpx;
  overflow: hidden;
  /* text-overflow:ellipsis;*/
  white-space: nowrap;
  float: left;
  text-align: center;
}

.header .search .pike image {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  top: 14rpx;
  right: 10rpx;
}

.header .search .pike:after {
  content: ' ';
  position: absolute;
  width: 2rpx;
  height: 40rpx;
  top: 10rpx;
  right: 0;
  background: #e6e6e6;
}

.header .search .wrap_con {
  display: flex;
  flex-flow: row nowrap;
  height: 60rpx;
  align-items: center;
}

.header .search .wrap_con image {
  width: 28rpx;
  height: 26rpx;
  padding-left: 20rpx;
}

.header .search .wrap_con input {
  color: #808080;
  font-size: 26rpx;
  padding-left: 20rpx;
  width: 380rpx;
}

.con {
  margin-top: 80rpx;
  padding: 0 20rpx;
  background: #fff;
}

.wrap_item {
  height: 100rpx;
  padding: 30rpx 0;
  display: flex;
  display: -webkit-flex;
  align-items: center;
  border-bottom: 2rpx solid #f2f2f2;
}

.wrap_item .headimg {
  margin-right: 30rpx;
}

.wrap_item .headimg image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.wrap_item .info {
  width: 450rpx;
}

.wrap_item .info .name {
  font-size: 30rpx;
  color: #333;
  font-weight: 700;
}

.wrap_item .info .tt {
  max-width: 288rpx;
  font-size: 24rpx;
  color: #666;
  line-height: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.wrap_item .time {
  height: 100rpx;
  text-align: right;
}

.wrap_item .time .date {
  font-size: 22rpx;
  color: #808080;
}

.wrap_item .time .type {
  margin-top: 30rpx;
  font-size: 24rpx;
  color: #00b00f;
}

.no_data {
  width: 100%;
  height: 120rpx;
  background: #fff;
  margin-top: 80rpx;
}

.no_data .txt {
  line-height: 120rpx;
  color: #808080;
  font-size: 26rpx;
  text-align: center;
}

.com-widget-goTop {
  position: fixed;
  bottom: 125px;
  right: 5px;
  background: rgba(0, 0, 0, 0.48);
  border-radius: 50%;
  overflow: hidden;
  z-index: 50000000000;
}

.com-widget-goTop .icon-gotop {
  background-color: rgba(25, 154, 240, 0.8);
  width: 100rpx;
  height: 100rpx;
  line-height: 68px;
  font-size: 12px;
  color: #fff;
  text-align: center;
  overflow: hidden;
  position: relative;
}

.com-widget-goTop .icon-gotop image {
  width: 30rpx;
  height: 32rpx;
  position: absolute;
  top: 16rpx;
  left: 36rpx;
}
