/* pages/invitation/about.wxss */
@import "/pages/common/lib/weui.wxss";

.navigator-arrow {
  padding-right: 26rpx;
  position: relative;
}

.navigator-arrow:after {
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #888;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 20rpx;
}
.banner {
  position: relative;
}

.banner image {
  width: 100%;
  height: 350rpx;
}

.banner .weather {
  position: absolute;
  width: 690rpx;
  height: 150rpx;
  bottom: -64rpx;
  left: 50%;
  margin-left: -345rpx;
  display: flex;
  display: -webkit-flex;
  flex-flow: row nowrap;
  align-items: center;
  background: #fff;
  border-radius: 10rpx;
}

.banner .weather .icon {
  width: 96rpx;
  height: 96rpx;
  margin-left: 20rpx;
}

.banner .weather .desc {
  margin-left: 30rpx;
  flex: 1;
}

.banner .weather .desc .degree {
  font-size: 36rpx;
  color: #333;
}

.banner .weather .desc .txt {
  font-size: 24rpx;
  color: #333;
}

.banner .weather .mybtn {
  width: 200rpx;
  height: 56rpx;
  border-radius: 28rpx;
  background: #00c200;
  font-size: 24rpx;
  color: #fff;
  text-align: center;
  line-height: 56rpx;
  margin-right:20rpx;
}

.botlist{
  margin-top:110rpx;
  padding:0 20rpx;
}
.botlist .tit{
  font-size: 30rpx;
  color:#333333;
}
.botlist .list .item{
  display: flex;
  display: -webkit-flex;
  width: 100%;
  height: 100rpx;
  flex-flow: row nowrap;
  align-items: center;
  background: #fff;
  border-bottom: 1rpx solid #f9f9f9;
}

.botlist .list .item .img_nav{
  width:46rpx;
  height: 46rpx;
  margin-left:20rpx;
}
.botlist .list .item .img_nav image{
  width:40rpx;
  height: 40rpx;
}
.botlist .list .item:nth-child(1) .img_nav image{
  width:46rpx;
  height: 39rpx;
}
.botlist .list .item:nth-child(2) .img_nav image{
  width:39rpx;
  height: 41rpx;
}
.botlist .list .item:nth-child(3) .img_nav image{
  width:40rpx;
  height: 40rpx;
}
.botlist .list .item .txt{
  margin-left:30rpx;
  flex:1;
}