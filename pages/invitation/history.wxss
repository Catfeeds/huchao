/* pages/invitation/history.wxss */

.history {
  background: #fff;
}

.banner image {
  width: 100%;
  height: 350rpx;
}

.history .tit {
  padding: 30rpx 0 0 30rpx;
  color: #333;
  font-size: 32rpx;
  font-weight: 700;
}

.history  .content {
  position: relative;
}

.history  .content:after {
  content: '';
  position: absolute;
  top: 0;
  left: 60rpx;
  z-index: 2;
  width: 2rpx;
  height: 100%;
  background: #f1f1f1;
}

.history  .content .item {
  display: flex;
  display: -webkit-flex;
  flex-flow: row nowrap;
  padding-left: 30rpx;
  margin-top: 30rpx;
  position: relative;
  z-index: 555;
}

.history  .content .item .time {
  font-size: 28rpx;
  color: #333;
  margin-right: 44rpx;
  position: absolute;
  z-index: 88;
  background: #fff;
}

.history  .content .item .desc {
  margin-left: 120rpx;
}

.history  .content .item .desc .txt {
  font-size: 26rpx;
  color: #333;
  line-height: 40rpx;
}

.history  .content .line {
  width: 2rpx;
  height: 1000rpx;
  background: red;
}
