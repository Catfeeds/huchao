.com-widget-goTop {
  position: fixed;
  bottom: 125px;
  right: 5px;
  background: rgba(0, 0, 0, 0.48);
  border-radius: 50%;
  overflow: hidden;
  z-index: 500;
}

.com-widget-goTop .icon-gotop {
  background-color: rgba(0, 0, 0, 0.8);
  width: 100rpx;
  height: 100rpx;
  line-height: 68px;
  font-size: 12px;
  color: #fff;
  text-align: center;
  overflow: hidden;
  position: relative;
}
.com-widget-goTop .icon-gotop image{
  width: 30rpx;
  height: 32rpx;
  position: absolute;
  top: 16rpx;
  left: 36rpx;
}