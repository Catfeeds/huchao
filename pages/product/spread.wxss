/* pages/product/spread.wxss */

.banner {
  position: relative;
}

.banner image {
  width: 100%;
  height: 362rpx;
}

.banner .con {
  position: absolute;
  width: 370rpx;
  top: 113rpx;
  right: 25rpx;
}

.banner .con .tit {
  font-size: 28rpx;
  color: #2ea8a5;
  text-align: center;
  font-weight: bolder;
}

.banner .con .desc .con_p {
  font-size: 24rpx;
  color: #2ea8a5;
  text-align: center;
  line-height: 30rpx;
}

.advantage {
  padding: 0 20rpx;
}

.advantage .tit {
  padding-left: 20rpx;
  font-size: 34rpx;
  line-height: 34rpx;
  color: #008fee;
  border-left: 4rpx solid #008fee;
  margin: 40rpx 0;
}

.advantage .con .item {
  width: 350rpx;
  height: 250rpx;
  float: left;
  border-right: 1rpx solid #e6e6e6;
  border-bottom: 1rpx solid #e6e6e6;
  position: relative;
}

.advantage .con:after {
  content: " ";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}

.advantage .con .item:nth-child(even) {
  border-right: none;
}

.advantage .con .item:nth-last-child(1), .advantage .con .item:nth-last-child(2) {
  border-bottom: none;
}

.advantage .con .item .title {
  font-size: 26rpx;
  color: #333;
  text-align: center;
  padding-top: 20rpx;
}

.advantage .con .item .desc {
  max-width: 310rpx;
  font-size: 22rpx;
  color: #333;
  line-height: 30rpx;
  text-align: center;
  margin: 30rpx auto;
}

.advantage .con .item .bgimg {
  position: absolute;
  right: 30rpx;
  bottom: 20rpx;
}

.advantage .con .item .bgimg image {
  width: 82rpx;
  height: 76rpx;
}

.advantage .con .item .bgimg image:nth-child(1) {
  width: 82rpx;
  height: 76rpx;
}

.advantage .con .item .bgimg image:nth-child(2) {
  width: 80rpx;
  height: 78rpx;
}

.advantage .con .item .bgimg image:nth-child(3) {
  width: 60rpx;
  height: 83rpx;
}

.advantage .con .item .bgimg image:nth-child(4) {
  width: 84rpx;
  height: 96rpx;
}

.advantage .con .item .bgimg image:nth-child(5) {
  width: 79rpx;
  height: 82rpx;
}

.advantage .con .item .bgimg image:nth-child(6) {
  width: 72rpx;
  height: 82rpx;
}

.advantage .con .item .bgimg image:nth-child(7) {
  width: 82rpx;
  height: 84rpx;
}

.advantage .con .item .bgimg image:nth-child(8) {
  width: 99rpx;
  height: 78rpx;
}

.mybtn {
  width: 100%;
  height: 100rpx;
  font-size: 36rpx;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  margin-top: 60rpx;
  background: -webkit-linear-gradient(left, #56ccf2, #2f80ed);
}
