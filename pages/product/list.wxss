
.botlist {
  height: auto;
  overflow: hidden;
  display: flex;
  flex-flow: row wrap;
  padding:0 36rpx;
  margin-top:20rpx;
  margin-left:-36rpx;
}

.botlist .item {
  width:320rpx;
  text-align: center;
  justify-content: center;
  align-content: center;
  padding: 60rpx 0;
  border-bottom: none;
  margin-top:20rpx;
  margin-left:36rpx;
  background: #fff;
  box-shadow: 0 5rpx 25rpx #e6e6e6;
}
.botlist .item .img_nav{
  width: 100%;
  height: 67rpx;
}
.botlist .item:nth-child(2) image{
  width: 96rpx;
  height: 64rpx;
}
.botlist .item:nth-child(3) image{
  width: 39rpx;
  height: 67rpx;
}
.botlist .item:nth-child(4) image{
  width: 56rpx;
  height: 64rpx;
}
.botlist .item:nth-child(5) image{
  width: 79rpx;
  height: 64rpx;
}
.botlist .item:nth-child(1) image{
  width: 66rpx;
  height: 60rpx;
}
.botlist .item:nth-child(6) image{
  width: 64rpx;
  height: 64rpx;
}
.botlist .item image {
  width:100rpx;
  height: 64rpx; 
  overflow: hidden;
}

.botlist .item .txt {
  font-size: 32rpx;
  color:#333333;
  margin-top: 20rpx;
}

.ttnews swiper {
  height: 60rpx;
}

.ttimg {
  width: 207rpx;
  height: 60rpx;
}

.swtxt {
  float: right;
  width: 540rpx;
  background-color: red;
  height: 60rpx;
  padding-right: 3rpx;
}