/* pages/news/detail.wxss */

.main {
  padding: 0 20rpx;
  background: #fff;
}

.main .tit {
  font-size: 46rpx;
  padding: 30rpx 0 15rpx;
  font-weight: bolder;
  line-height: 55rpx;
}

.main .item text {
  font-size: 26rpx;
  line-height: 26rpx;
  color: #999;
}

.main .item text.read {
  margin-left: 24rpx;
  line-height: 26rpx;
}

.main .label {
  font-size: 28rpx;
  color: #999;
}

.content {
  border-bottom: 1rpx solid #e6e6e6;
  height: auto;
  overflow: hidden;
}

.content image {
  width: 100%;
  height: 530rpx;
}

.content .item {
  padding: 20rpx 0;
  font-size: 34rpx;
  line-height: 50rpx;
  color: #333;
}

.recommend {
  padding: 30rpx 20rpx 0rpx;
  background: #fff;
}

.recommend .tit {
  padding: 0rpx 18rpx;
  font-size: 34rpx;
  line-height: 34rpx;
  color: #808080;
  border-left: 4rpx solid #008fee;
}

.proclass .tit .proclass_tit {
  padding: 15rpx 0;
}

.center {
  flex: 1;
}

.proclass .tit .more image {
  width: 11rpx;
  height: 20rpx;
}

.proclass .item .box {
  display: flex;
  flex-flow: row nowrap;
  padding: 30rpx 0;
  position: relative;
  border-bottom: 1rpx solid #e6e6e6;
}

.proclass .item:nth-last-child(1) .box {
  border-bottom: 0;
}

.proclass .item .box .left {
  width: 223rpx;
  height: 127rpx;
  display: block;
}

.proclass .item .box .left image {
  width: 223rpx;
  height: 127rpx;
  display: block;
}

.proclass .item .box .right {
  margin-left: 20rpx;
}

.proclass .item .box .right .caption {
  font-size: 30rpx;
  line-height: 35rpx;
  color: #333;
  max-width: 460rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.proclass .item .box .right .desc {
  font-size: 26rpx;
  color: #808080;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.proclass .item .box .right .update {
  font-size: 24rpx;
  color: #ff3831;
}

.proclass .item .box .restrict {
  position: absolute;
  right: 0;
  bottom: 30rpx;
  font-size: 28rpx;
  color: #ff3831;
}

.mybtn {
  width: 213rpx;
  height: 75rpx;
  border-radius: 37rpx;
  background: #008fee;
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
  margin: 30rpx auto;
}

.mybtn image {
  width: 29rpx;
  height: 31rpx;
}

.mybtn .txt {
  color: #fff;
  font-size: 26rpx;
  margin-left: 20rpx;
}

.shortcut_nav {
  width: 90rpx;
  height: 90rpx;
  position: fixed;
  bottom: 80rpx;
  left: 30rpx;
  background-color: #008fee;
  border-radius: 50%;
  opacity: 0.9;
}

.shortcut_nav image {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 15rpx;
  left: 15rpx;
}