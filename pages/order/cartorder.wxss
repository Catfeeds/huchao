@import "/pages/common/lib/weui.wxss";

.navigator-arrow {
  padding-right: 26rpx;
  position: relative;
}

.navigator-arrow:after {
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #888;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 20rpx;
}

.bgimg {
  text-align: center;
  width: 100%;
  height: 384rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.bgimg image.bg {
  width: 100%;
  height: 384rpx;
  position: absolute;
  top: 0px;
  left: 0px;
}

.userinfo {
  position: relative;
  margin-top: 80rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  display: block;
}

.userinfo-nickname {
  color: #fff;
}

.mt0 {
  margin-top: 0rpx;
}

.orders-box {
  margin-bottom: 90rpx;
}

.orders-box .orders-list {
  position: relative;
  padding: 20rpx 20rpx 20rpx 180rpx;
  border-bottom: 1rpx solid #ededed;
  min-height: 140rpx;
}
.orders-box .orders-list:last-child{
  border-bottom:none;
}

.orders-thumb {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  width: 150rpx;
  height: 150rpx;
}

.orders-pro-name {
  max-height: 88rpx;
  overflow: hidden;
}

.orders-pro-price {
  line-height: 60rpx;
  color: #888;
}

.orders-count-num {
  line-height: 40rpx;
  color: #888;
}

.bordernone {
  border: none;
}

.bordernone::before {
  border: none;
}

.bordernone::after {
  border: none;
}

.car_list .bottom {
  position: fixed;
  bottom: -1rpx;
  line-height: 80rpx;
  background-color: #fff;
  width: 100%;
  display: block;
  padding-left: 15rpx;
  border-top: 1rpx solid #eee;
}

.car_list .bottom .bt {
  background-color: #f0189d;
  color: #fff;
  width: 180rpx;
  float: right;
  text-align: center;
}

.car_list .bottom .check {
  display: inline-block;
}

.car_list .bottom .info {
  display: inline-block;
  padding-right: 10rpx;
}

.car_list .bottom .info view {
  display: inline-block;
}

.car_list .bottom .ttnum, .car_list .bottom .ttprice {
  color: #f0189d;
}

checkbox {
  border: none;
  border-radius: 50%;
}

.total-select {
  position: absolute;
  left: 20rpx;
  top: 16rpx;
  width: 45rpx;
  height: 45rpx;
}

.bottom .seltxt {
  margin-left: 55rpx;
}

.cart-del {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 44rpx;
}

.frlink {
  display: inline-block;
  float: right;
  color: #586c94;
}
.weui-cell__bd .txt{
  margin-left: 10rpx;
  color: #999;
}
.pcolor{
  font-size: 24rpx;
  color: #999;
}